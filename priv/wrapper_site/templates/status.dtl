<html>
  <head>
    <link rel="stylesheet" href="/styles/basic.css" />
  </head>
  <body>
    <img src="/red/images/node-red.svg" alt="RED logo"/>
    <h1>Erlang-RED</h1>
    <a href="/erlang-red">Running instance</a>
    {% if name %}
    <hr/>
    <h2>{{ status }} release: {{ name }}-{{ version }}</h2>
    <ul>
      {% for app in apps %}
        <li>{{ app }}</li>
      {% endfor %}
    </ul>
    {% endif %}
  </body>
</html>
